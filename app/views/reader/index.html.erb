<% if @article.errors.any? %>
  <h1>Hmmm Looks like <%= @article.errors.messages[:url].first %> </h1>
<% else %>
  <%- title @article.title %>

  <h1><%= @article.title %></h1>
  <p>Author: <%= @article.author %></p>
  <p>From: <%= @article.domain %></p>
  <p>Date Published: <%= @article.date_published %></p>
  <p><%= @article.min_read %> min read.</p>
  
  <%= render 'shared/article_content', article: @article.content %>
<% end %>
