<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? content_for(:title) : "Contentify" %></title>

    <%= csrf_meta_tags %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="https://www.facebook.com/MaryJane1">
    <meta name="referrer" content="always">
    <meta name='description' content='<%= yield_meta_tag(:description, 'Contentify rocks.') %>'>
    <meta name='keywords'
      content='<%= yield_meta_tag(:keywords,
        'reader,web,parser,contentify,news,articles,accessibility,world,domination') %>'>
    <meta name='theme-color' content='<%= yield_meta_tag(:theme_color, '#FFFFFF') %>'>

    <meta property="og:locale" content='<%= yield_meta_tag(:og_locale, 'en_US') %>'>
    <meta property="og:type" content='<%= yield_meta_tag(:og_type, 'website') %>'>
    <meta property="og:url" content='<%= yield_meta_tag(:og_url, 'https://contentify.io/') %>'>
    <meta property="og:title" content='<%= yield_meta_tag(:og_title, 'Contentify') %>'>
    <meta property="og:image" content='<%= yield_meta_tag(:og_image, 'https://yt3.ggpht.com/-oSAbz46-1qw/AAAAAAAAAAI/AAAAAAAAAAA/UzFF1NAQRSo/s900-c-k-no-mo-rj-c0xffffff/photo.jpg') %>'>
    <meta property="og:description" content='<%= yield_meta_tag(:og_description, 'Contentify rocks.') %>'>

    <meta name="twitter:card" content='<%= yield_meta_tag(:twitter_card, 'summary') %>'>
    <meta name="twitter:url" content='<%= yield_meta_tag(:twitter_url, 'https://www.contentify.io/') %>'>
    <meta name="twitter:title" content='<%= yield_meta_tag(:twitter_title, 'Contentify') %>'>
    <meta name="twitter:description" content='<%= yield_meta_tag(:twitter_description, 'Contentify rocks.') %>'>
    <meta name="twitter:image" content='<%= yield_meta_tag(:twitter_image, 'https://yt3.ggpht.com/-oSAbz46-1qw/AAAAAAAAAAI/AAAAAAAAAAA/UzFF1NAQRSo/s900-c-k-no-mo-rj-c0xffffff/photo.jpg') %>'>

    <%= favicon_link_tag 'favicon.png', type: 'image/png' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-28701911-8', 'auto');
      ga('send', 'pageview');

    </script>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : "<%= ENV.fetch('FACEBOOK_ID') %>",
          xfbml      : true,
          version    : 'v2.8'
        });
        FB.AppEvents.logPageView();
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>
    <%= yield %>
  </body>
</html>
